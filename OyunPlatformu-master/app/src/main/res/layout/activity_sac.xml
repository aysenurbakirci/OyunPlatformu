<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout_sac"
    android:weightSum="1"
    tools:ignore="ContentDescription"
    android:background="@color/colorWhite"
    tools:context=".SacActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/heading_sac"
        android:textSize="21sp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="40dp"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:textSize="16dp"
        android:text="@string/yuz_text"
        android:textColor="@color/colorPrimaryDark"
        tools:ignore="MissingConstraints" />

    <RadioGroup
        android:id="@+id/yuz_tipi_group_sac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <RadioButton
            android:id="@+id/yuz_oval_radio"
            android:layout_marginStart="50dp"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:text="@string/oval_text"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/yuz_ucgen_radio"
            android:layout_width="wrap_content"
            android:text="@string/ucgen_text"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp" />

        <RadioButton
            android:id="@+id/yuz_kare_radio"
            android:layout_width="wrap_content"
            android:text="@string/kare_text"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp" />
    </RadioGroup>

    <ImageView
        android:id="@+id/yuz_img"
        android:layout_width="400dp"
        android:layout_height="110dp"
        android:layout_marginStart="0dp"
        android:src="@drawable/yuz_tipleri" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:text="@string/kas_text"
        android:textSize="16dp"
        android:textColor="@color/colorPrimaryDark"
        tools:ignore="MissingConstraints" />

    <RadioGroup
        android:id="@+id/kas_tipi_group_sac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <RadioButton
            android:id="@+id/koseli_kas_radio"
            android:layout_marginStart="7dp"
            android:layout_width="wrap_content"
            android:text="@string/koseli_kas_text"
            android:textSize="15dp"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/duz_kas_radio"
            android:layout_width="wrap_content"
            android:text="@string/duz_kas_text"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp" />

        <RadioButton
            android:id="@+id/kavisli_kas_radio"
            android:layout_width="wrap_content"
            android:text="@string/kavisli_kas_text"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp" />
    </RadioGroup>

    <ImageView
        android:id="@+id/kas_img"
        android:layout_width="400dp"
        android:layout_height="92dp"
        android:layout_marginStart="0dp"
        android:src="@drawable/kas_tipleri" />

    <Button
        android:id="@+id/btn_tahmin_sac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="@string/btn_tahmin_text_sac"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorWhite"
        tools:ignore="MissingConstraints" />

</LinearLayout>