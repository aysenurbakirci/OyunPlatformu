<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TahminActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/tuttugum_sayi_text"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="42dp" />

    <EditText
        android:id="@+id/yazi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="17dp"
        android:autofillHints="yazi" />

    <Button
        android:id="@+id/tahminEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yazi"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="33dp"
        android:background="@color/colorPrimaryDark"
        android:enabled="true"
        android:textStyle="bold"
        android:text="@string/btn_tahmin_text"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/yenidenOyna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tahminEt"
        android:layout_marginTop="19dp"
        android:background="@color/colorPrimaryDark"
        android:enabled="true"
        android:textStyle="bold"
        android:text="@string/btn_yeniden_text"
        android:textColor="@color/colorWhite" />
</RelativeLayout>